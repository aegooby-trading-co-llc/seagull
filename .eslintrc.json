{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "tsconfigRootDir": ".",
        "project": ["./tsconfig.json"]
    },
    "plugins": [
        "@typescript-eslint",
        "relay"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:@typescript-eslint/recommended-requiring-type-checking",
        "plugin:relay/strict"
    ],
    "ignorePatterns": [
        "**/build/**/*", 
        "**/node_modules/**/*",
        "*.deno.*"
    ]
}